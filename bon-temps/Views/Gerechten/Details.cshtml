@model bon_temps.Models.Gerecht

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gerecht</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GerechtSoort)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GerechtSoort.Soort)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
    </dl>
    <div>
        @await Component.InvokeAsync("GerechtIngredient", new  { id = Model.Id}) 
    </div>
    <form asp-action="IngredientToevoegen" class="row" method="post">
        <div class="col-4">
            <input type="hidden" name="gerechtId" value="@Model.Id" />
            <div class="form-group">
                <label class="col-form-label">Ingredient toevoegen</label>
                <select name="ingredientId" class="form-control" asp-items="ViewBag.Ingredienten"></select>
            </div>
            <div class="form-group">
                <label class="col-form-label">Aantal</label>
                <input name="aantal" class="form-control" type="number" min="1" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Toevoegen" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
