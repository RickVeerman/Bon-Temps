@model bon_temps.Models.GerechtIngredient


@{
    ViewData["Title"] = "Edit";
}

<h1>Wijzigen</h1>

<h4>GerechtIngredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditIngredient">
                <input type="hidden" asp-for="GerechtId"/>
                <input type="hidden" asp-for="IngredientId"/>
                <div class="form-group">
                    <label asp-for="Aantal" class="control-label"></label>
                    <input asp-for="Aantal" class="form-control"/>
                    <span asp-validation-for="Aantal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Wijzigen" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Gerecht.Id">Terugt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
