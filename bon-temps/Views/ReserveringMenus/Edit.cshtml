@model bon_temps.Models.ReserveringMenu

@{
    ViewData["Title"] = "Edit";
}

<h1>Wijzigen</h1>

<h4>ReserveringMenu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReserveringId" />
            <input type="hidden" asp-for="MenuId" />
            <div class="form-group">
                <label asp-for="Aantal" class="control-label"></label>
