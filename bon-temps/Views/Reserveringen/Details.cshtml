@model bon_temps.Models.Reservering

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservering</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.HeleNaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.HeleNaam)
        </dd>
    </dl>
    <div>
        @await Component.InvokeAsync("ReserveringMenu", new { id = Model.Id })
    </div>
    <form asp-action="MenuToevoegen" class="row" method="post">
        <div class="col-4">
            <input type="hidden" name="reserveringId" value="@Model.Id" />
            <div class="form-group">
                <label class="col-form-label">Menu toevoegen</label>
                <select name="menuId" class="form-control" asp-items="ViewBag.Menus"></select>
            </div>
            <div class="form-group">
                <label class="col-form-label">Aantal</label>
                <input name="aantal" class="form-control" type="number" min="1" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Toevoegen" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Wijzigen</a> |
    <a asp-action="Index">Terug</a>
</div>
